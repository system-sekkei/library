<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="library.infrastructure.datasource.reservation.ReservationMapper">
    <select id="newReservationIdentifier" resultType="Integer">
        SELECT NEXTVAL('予約.予約番号')
    </select>

    <insert id="insertReservation">
        INSERT INTO 予約.予約履歴(予約番号, 会員番号, 本番号)
        VALUES (#{reservationId}, #{memberNumber.value}, #{bookNumber.value})
    </insert>

    <resultMap id="reservation" type="library.domain.model.reservation.reservation.Reservation">
        <association property="member"
                     column="memberNumber.value"
                     select="library.infrastructure.datasource.member.MemberMapper.selectMember" />
        <association property="book"
                     column="bookNumber.value"
                     select="library.infrastructure.datasource.book.BookMapper.findBook" />
    </resultMap>

<!--  TODO 取置依頼中を導入して、JOIN/WHEREなしに一覧可能にする  -->
    <select id="selectAllReservation" resultMap="reservation">
        SELECT 予約履歴.予約番号 as "reservationId.value",
               登録.会員番号 as "memberNumber.value",
               本.本番号 as "bookNumber.value"
        FROM 予約.予約履歴
        INNER JOIN 会員.登録 on 予約履歴.会員番号 = 登録.会員番号
        INNER JOIN 蔵書.本 on 予約履歴.本番号 = 本.本番号
        LEFT OUTER JOIN 予約.取消履歴 on 予約履歴.予約番号 = 取消履歴.予約番号
        WHERE 取消履歴.予約番号 IS NULL
    </select>

    <insert id="insertCancelReservation">
        INSERT INTO 予約.取消履歴(予約番号) VALUES (#{reservationId.value})
    </insert>
</mapper>